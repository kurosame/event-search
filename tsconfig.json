{
  "compilerOptions": {
    // Basic
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "sourceMap": true,
    // Strict Type Checks
    "strict": true,
    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Module Resolution
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": { "~/*": ["./*"], "@/*": ["./*"] },
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/axios", "@nuxtjs/vuetify"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Experimental
    "experimentalDecorators": true,
    // Advanced
    "skipLibCheck": true
  }
}
